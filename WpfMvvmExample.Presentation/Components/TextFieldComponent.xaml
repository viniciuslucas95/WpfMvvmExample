<UserControl x:Class="WpfMvvmExample.Presentation.Components.TextFieldComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:WpfMvvmExample.Presentation.Converters"
             xmlns:constants="clr-namespace:WpfMvvmExample.Presentation.Constants"
             x:Name="root"
             mc:Ignorable="d" 
             d:Background="White">
    <UserControl.Resources>
        <converters:ForceFixedWidthConverter x:Key="ForceWidthNumberConverter"/>
    </UserControl.Resources>
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Grid Height="{Binding Source={
                x:Static constants:TextFieldConstants.TEXT_FIELD_HEIGHT}}"
                Width="{Binding Width, ElementName=root}"
                MinWidth="{Binding Source={
                    x:Static constants:TextFieldConstants.MIN_TEXT_FIELD_WIDTH}}">
                <Canvas>
                    <TextBox
                        VerticalContentAlignment="Center"
                        Height="{Binding Height,
                            RelativeSource={
                                RelativeSource AncestorType={
                                    x:Type Grid}}}"
                        Width="{Binding Width,
                            RelativeSource={
                                RelativeSource AncestorType={
                                    x:Type Grid}},
                            Converter={
                                StaticResource ForceWidthNumberConverter}}"
                        MinWidth="{Binding MinWidth,
                            RelativeSource={
                                RelativeSource AncestorType={
                                    x:Type Grid}}}"
                        Padding="8px 0"
                        FontFamily="Roboto"
                        FontWeight="Medium"
                        FontSize="12"
                        Text="{Binding Text,
                            ElementName=root,
                            UpdateSourceTrigger=PropertyChanged}"
                        d:Text="Text box"/>
                        <WrapPanel
                            IsHitTestVisible="False"
                            Canvas.Top="-8"
                            Canvas.Left="8"
                            Background="White">
                            <TextBlock
                                Padding="4 0"
                                FontFamily="Roboto"
                                FontSize="12"
                                Text="{Binding Label,
                                    ElementName=root}"
                                d:Text="Label"/>
                    </WrapPanel>
                </Canvas>
            </Grid>
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>
